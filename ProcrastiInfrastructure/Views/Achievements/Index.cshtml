@model ProcrastiInfrastructure.Models.AchievementsViewModel;

@{
    ViewData["Title"] = "Achievements";
}

<div>
    <h2>Achievements that are not to be ashamed of</h2>
    <p>Collected: @Model.EarnedCount / @Model.TotalCount</p>
</div>
<hr />

<div style="display: flex; flex-wrap: wrap; gap: 20px;">
    @foreach (var achievement in Model.Achievements)
    {
    string borderStyle = achievement.IsUnlocked ? "border: 2px solid green;" : "border: 2px solid gray;";

        <div style="padding: 15px; width: 250px; border-radius: 8px; @borderStyle">
            <div style="width: 50px; height: 50px; background-color: #eee; margin-bottom: 10px; display: flex; align-items: center; justify-content: center;">
                IMG
            </div>

            <h4>@achievement.Title</h4>
            <p style="font-size: 14 px; color: #555;">@achievement.Description</p>

            @if (achievement.IsUnlocked)
            {
                <p style="color: green; font-weight: bold;">Unlocked</p>
            }
            else
            {
                <p style="color: gray; font-style: italic;">Locked</p>
            }
        </div>
    }
</div>