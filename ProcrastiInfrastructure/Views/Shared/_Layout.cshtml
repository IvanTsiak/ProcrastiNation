<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProcrastiNation</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProcrastiInfrastructure.styles.css" asp-append-version="true" />
</head>
<body>
        <div style="display: flex;">
            <div style="width: 250px; background-color: #f4f4f4; height: 100vh; padding: 20px; display: flex; flex-direction: column; justify-content: space-between; position: sticky; top: 0;">

                <div>
                    <h3>NAVIGATION</h3> <ul style="list-style-type: none; padding: 0;">
                        <li style="margin-bottom: 10px;">
                            <a asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li style="margin-bottom: 10px;">
                            <a asp-controller="Logs" asp-action="Index">Global</a>
                        </li>
                        <li style="margin-bottom: 10px;">
                            <a asp-controller="Logs" asp-action="Create">Create Log</a>
                        </li>
                        <li style="margin-bottom: 10px;">
                            <a asp-controller="Achievements" asp-action="Index">Achievements</a>
                        </li>
                    </ul>
                </div>

                <div style="border-top: 1px solid #ccc; padding-top: 10px;">
                    <a asp-controller="Home" asp-action="Profile">Profile</a>
                </div>
            </div>

            <div style="flex-grow: 1; padding: 20px;">
                @RenderBody()
            </div>
        </div>
    @* <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
